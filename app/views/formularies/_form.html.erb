  <div class="col-md-2">
    <div class="form-group">
      <label>CAO02: Obturación con Resina</label>
      <%= f.number_field :cao02, options = {class: "form-control"} %>
    </div>
    <div class="form-group">
      <label>CAO05: Obturación con material temporal</label>
      <%= f.number_field :cao05, options = {class: "form-control"} %>
