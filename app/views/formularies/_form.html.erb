<%= form_for @formulary, :validate => true do |f| %>
  <% if @formulary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@formulary.errors.count, "error") %> prohibited this formulario from being saved:</h2>
      <ul>
      <% @formulary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form role="form">
<div class="row">
  <div class="col-md-2">
    <div class="form-group">
      <label>Responsable de llenado</label>
      <%= f.text_field :responsable_llenado, class: "form-control"%>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>

  <div class="row">
    <div class="alert alert-info col-md-10">
      <strong>Consultas odontológicas</strong>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <label>COD01: Primera Vez</label>
        <%= f.number_field :cod01, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
        <div class="form-group">
          <label>COD02: Subsecuente</label>
          <%= f.number_field :cod02, options = {min: 1, class: "form-control"} %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 alert alert-info">
      <p>
        <strong>Actividades Preventivas:</strong> Intramuros y extramuros
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <label>APE01: Detección de placa bacteriana*</label>
        <%= f.number_field :ape01, options = {min: 1, class: "form-control"} %>
      </div>

      <div class="form-group">
        <label>APE04: Enjuagues de fluoruro de sodios (Autoaplicaciones)*</label>
        <%= f.number_field :ape04, options = {min: 1, class: "form-control"} %>
      </div>

      <div class="form-group">
        <label>APE07: Instrucción de autoexamen de cavidad bucal </label>
        <%= f.number_field :ape07, options = {min: 1, class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <div class="form-group">
        <label>APE02: Instrucción en técnica de cepillado*</label>
        <%= f.number_field :ape02, options = {class: "form-control"} %>
      </div>
      <div class="form-group">
        <label>APE05: Revisión de tejidos bucales*</label>
        <%= f.number_field :ape05, options = {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <div class="form-group">
       <label>APE03: Instrucción de uso del hilo dental </label>
        <%= f.number_field :ape03, options = {class: "form-control"} %>
      </div>
      <div class="form-group">
        <label>APE06: Revisión e instrucción de higiene de protésis*</label>
        <%= f.number_field :ape06, options = {class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 alert alert-info">
      <p>
        <strong>Actividades Preventivas:</strong> Intramuros
      </p>
    </div>
  </div>

<div class="row">
  <div class="col-md-2">
    <div class="form-group">
      <label>API01: Profilaxis</label>
      <%= f.number_field :api01, options = {class: "form-control"} %>
    </div>
    <div class="form-group">
      <label>API04: Sellado de fosetas y fisuras </label>
      <%= f.number_field :api04, options = {class: "form-control"} %>
    </div>
  </div>
  <div class="col-md-2"></div>
  <div class="col-md-2">
    <div class="form-group">
      <label>API02: Odontoxesis </label>
      <%= f.number_field :api02 , options = {class: "form-control"}%>
    </div>
    <div class="form-group">
      <label>SSB01: Sesiones sobre Salud Bucal</label>
      <%= f.number_field :ssb01 , options = {class: "form-control"}%>
    </div>
  </div>
  <div class="col-md-2"></div>
  <div class="col-md-2">
    <div class="form-group">
     <label>API03: Aplicación tópica de fluor</label>
      <%= f.number_field :api03, options = {class: "form-control"} %>
