  <div><%= f.label "Nombre" %><br />
    <%= f.text_field :name, :autofocus => true%>
  </div>

  <div><%= f.label "Apellido Paterno" %><br />
    <%= f.text_field :ap_paterno%>
  </div>

  <div><%= f.label "Apellido Materno" %><br />
    <%= f.text_field :ap_materno%>
  </div>

  <div><%= f.label "Entidad Federativa" %><br />
    <%= f.collection_select :id,  State.order(:id), :id, :state_name, include_blank:true%>
  </div>

  <div><%= f.label "JurisdicciÃ³n sanitaria" %><br />
    <%= f.grouped_collection_select :jurisdiction_id,  State.order(:state_name), :jurisdictions,
