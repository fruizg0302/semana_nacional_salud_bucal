    </div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <div class="form-group">
        <label>BEN02: 20 años ó más</label>
        <%= f.number_field :ben02, options = {class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 alert alert-info">
      <p>
        <strong>Personal participante</strong>
