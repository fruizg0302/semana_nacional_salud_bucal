<h2>Resultados de tu jurisdicción</h2>
<% if @formularios.empty? %>
<div class="row">
  <div class="alert alert-info col-md-10">
    <strong>Tu jurisdicción no ha capturado metas aún</strong>
  </div>
</div>
<% else %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Captura por:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @formularios.each do |formulary| %>
      <tr>
        <td><%= formulary.responsable_llenado %></td>
        <td><%= link_to 'Detalles', formulary %></td>
        <td><%= link_to 'Editar', edit_formulary_path(formulary) %></td>
        <td><%= link_to 'Eliminar', formulary, method: :delete, data: { confirm: '¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to("Nueva captura", new_formulary_path, nil) %>
